{
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "name": "ironex/irony",
  "require": {
    "php": "7.2.5",
    "php-di/php-di": "^6.0",
    "doctrine/annotations": "^1.6",
    "nikic/fast-route": "^1.3",
    "justinrainbow/json-schema": "^5.2",
    "doctrine/orm": "^2.7",
    "defuse/php-encryption": "^2.2",
    "swiftmailer/swiftmailer": "^6.2"
  },
  "scripts": {
    "api-test": "php bin/api-test.php",
    "doctrine-schema-create": "php vendor/doctrine/orm/bin/doctrine.php orm:schema-tool:create",
    "doctrine-schema-update": "php vendor/doctrine/orm/bin/doctrine.php orm:schema-tool:update --force",
    "update-translations": "php bin/update-translations.php --search-directory %cd%\\src --translation-directory %cd%\\translation --remove-unused true"
  },
  "type": "project"
}
